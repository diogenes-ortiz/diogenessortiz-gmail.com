<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %>
<body style="margin: 0px;">
    <%- include("../partials/header") %>
    <div class="container-fluid">
        <div class="row">
            <section class="menu col-xs-12 col-lg-2">
                <div class="row">
                    <section class="menuInside col-xs-2 col-lg-10">
                        <h6 class="col-xs-2 col-lg-10">Nueva temporada</h6>
                        <ul class="col-xs-2 col-lg-10">
                            <li>Calzados</li>
                            <li>Jeans</li>
                            <li>Tops</li>
                            <li>Camperas</li>
                            <li>Hoodies</li>
                        </ul>
                    </section>
                </div>
                <div class="row">
                    <section class="menuInside col-xs-2 col-lg-10">
                        <h6 class="col-xs-2 col-lg-10">Accesorios</h6>
                        <ul class="col-xs-2 col-lg-10">
                            <li>Lentes</li>
                            <li>Pulseras</li>
                            <li>Anillos</li>
                        </ul>
                    </section>
                </div>
            </section>
            <div class="articulos col-xs-12 col-lg-10">
                <div class="row">
                    <section class="col-12">
                        <h2> SALE%</h2>
                    </section>
                </div>
                <div class="row">
                    <% for(let i = 0; i < products.length; i++) { %>
                        <section class="cajaP col-xs-10 col-sm-5 col-lg-3">
                            <section class="col-12">
                                <a href="/products/detalle/<%= products[i].id %>"><img class="fotitos" src= "/<%= products[i].images[0].route %>" alt="Campera"></a>
                            </section>
                            <section class="nombreP col-12">
                                <%= products[i].name %>
                            </section>
                            <section class="precioP col-12">
                                $<%= products[i].price %>
                            </section>
                            <div class="row">
                                <button class="cora col-xs-10 offset-lg-1 col-lg-5" type="submit">Add to <svg class="bi bi-heart-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" clip-rule="evenodd"/>
                                  </svg></button>
                                <button class="bolsa col-xs-12 col-lg-5">Add to <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                                  </svg></button>
                            </div>
                        </section>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <%- include("../partials/footer") %>
</body>
</html>