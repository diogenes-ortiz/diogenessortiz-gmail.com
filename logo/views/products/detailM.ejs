<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/products/detailM.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link  rel="icon"   href="images/favicon.jpg" type="image/jpg" />
    <title>404 Store</title>
</head>
<body>
    <%- include("../partials/header") %>
    <%# product.forEach (function(detail){ %>

        
    <div class="container-fluid">
        <div class="row">
        <section class="col-lg-7 col-md-7 col-sm-12">
            <div class="row">
            <section class= "contMini col-lg-2 offset-lg-1 col-md-2 offset-md-1 col-sm-2 offset-sm-1 offset-1 col-7 ">
                <div class="row">
                    <% if(detail.images[1] != undefined) { %>
                <section class="col-lg-10 col-md-10 col-sm-10 offset-1 col-10">
                    <img class="mini miniTop" src= "/<%= detail.images[1].route %>" alt="">
                </section>
                <% } %>
                <% if(detail.images[2] != undefined) { %>
                <section class="col-lg-10 col-md-10 col-sm-10 offset-1 col-10">
                    <img class="mini" src="/<%= detail.images[2].route %>" alt="">
                </section>
                <% } %>
                <% if(detail.images[3] != undefined) { %>
                <section class="col-lg-10 col-md-10 col-sm-10 offset-1 col-10">
                    <img class="mini" src="/<%= detail.images[3].route %>" alt="">
                </section>
                <% } %>
                </div>
            </section>
            <section class="contFotito col-10 col-sm-7 col-md-8 col-lg-9">
            <div class="row">
                
                <img class="fotito offset-1 col-10 col-lg-8" src="/<%= detail.images[0].route %>" alt="Campera">
            </div>
            </section>
            </div>
        </section>
            <section class="partes col-lg-5 col-md-5 col-sm-12">
                <div class="row">
                <article class="col-7">
                    <h2 class="de-genero""><%= detail.name %></h2>
                </article>
                <article class="precio col-4"><p class="price">$<%= detail.price %></p></article>
                <article class="talle col-10">TALLE</article>
                <article class="col-12">
                    <ul>
                        <% detail.sizes.forEach(function(talle) { %>
                            <strong><li><%= talle %></li></strong>
                        <% }) %>
                    </ul>
                </article>
                <div class="col-lg-1 col-md-2 col-sm-2 col-2 color">
                    <svg width="10em" height="1em" viewBox="0 0 16 16" class="circulo circulos bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <circle class="circulo circulos" cx="8" cy="8" r="8"/>
                      </svg>
                </div>
                <div class="col-lg-1 col-md-2 col-sm-2 col-2 color">
                    <svg width="7em" height="1em" viewBox="0 0 16 16" class=" circulos bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <circle class="circulo2 circulos" cx="8" cy="8" r="8"/>
                      </svg>
                </div>
                <div class="col-12">
             <div class="row">
                <section class="addTo2">
                <form action="/favorites/" method="POST">
                    <input type="hidden" value= "<%= detail.id %>" name="productId">
                <button class="addTo addCora col-lg-10 col-md-3 col-sm-4 col-4"> ADD TO <svg class="bi bi-heart-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" clip-rule="evenodd"/>
                  </svg>
                </button></form></section>
                <article class="cora"> <p>|</p></article>
                <section class="addTo1">
                <form action="/carts/" method="POST">
                    <input type="hidden" value="<%= detail.id %>" name="productId">
                    <button class="addTo col-lg-10 col-md-3 col-sm-4 col-4">
                    ADD TO <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-cart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                      </svg>
                    </button></form></section>
            </div>
                </div>
                <p></p>
                <div class="col-12">
                    <article class="comprar col-lg-7 col-md-7 col-sm-9 col-10">
                        <form action="/products" method="GET">
                        <button class="comprarB" type="submit"><a href="/products/comprafinalizada">Comprar</a></button>
                        </form>
                    </article>
                </div>
                <br>
                <br>
                <br>
                <br>
            </div>
            </section>
        </div>
    </div>
    <%# }) %>
    <%# }) %>
    <%- include("../partials/footer") %>
</body>
</html>