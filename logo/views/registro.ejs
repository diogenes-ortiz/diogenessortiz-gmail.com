   <%- include("./partials/head") %>
<body>
  <%- include("./partials/header") %>
  <div class ='container contenedor col-3'>
    <div class = 'row'>
        <div class = 'exit offset-10 col-2'><a class='exitbutton' href='/'><svg class="bi bi-x" width="2em" height="2em" viewBox="0 0 16 16" fill="black" xmlns="http://www.w3.org/2000/svg">
